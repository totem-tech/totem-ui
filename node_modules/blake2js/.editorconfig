# Editorconfig http://editorconfig.org/

root = true

[*]
charser = utf-8
end_of_line = lf

[*.{c,cc,h,hh}]
indent_style = tab
tab_width = 2

[*.{js,jsx}]
indent_style = tab
tab_width = 2

[*.{json,*rc,yml,gyp}]
indent_style = space
indent_size = 2

[*.{md,mark*}]
indent_style = space
indent_size = 2
